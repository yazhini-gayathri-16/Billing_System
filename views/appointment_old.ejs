<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/appointmentstyle.css">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.css"> -->
</head>
<body>
    <% if (userRole === 'admin') { %>
        <%- include('partials/navbar') %>
    <% } else { %>
        <%- include('partials/staffnavbar') %>
    <% } %>
    
    <div class="container">
        <!-- Add Appointment Form -->
        <div class="appointment-form">
            <h1>Add New Appointment</h1>
            <form id="appointmentForm" onsubmit="return false;">
                <div class="form-row">
                    <div class="form-group">
                        <label for="customerName">Customer Name:</label>
                        <input type="text" autocomplete="off" id="customerName" name="customerName" required>
                    </div>
                    <div class="form-group">
                        <label for="dateTime">Preferred Date & Time:</label>
                        <input type="datetime-local" autocomplete="off" id="dateTime" name="dateTime" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="contactNumber">Contact Number:</label>
                        <input type="text" autocomplete="off" id="contactNumber" name="contactNumber" required>
                    </div>
                    <div class="form-group">
                        <label for="specialist">Choose Stylist:</label>
                        <select name="specialist" id="specialist" required>
                            <% staffMembers.forEach(function(staff) { %>
                                <option value="<%= staff._id %>"><%= staff.name %> - <%= staff.jobTitle %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="serviceType">Type of Service:</label>
                        <input autocomplete="off" type="text" id="serviceType" name="serviceType" required>
                    </div>
                    <div class="form-group">
                        <label for="specialNeeds">Special Needs (optional):</label>
                        <input autocomplete="off" type="text" id="specialNeeds" name="specialNeeds">
                    </div>
                </div>
                <button type="submit">Book Appointment</button>
            </form>
        </div>

        <!-- List of Appointments -->
        <div class="appointment-list">
            <h2>List of Appointments</h2>
            <table>
                <thead>
                    <tr>
                        <th>Sl.No</th>
                        <th>Name</th>
                        <th>Service</th>
                        <th>Stylist</th>
                        <th>Timing</th>
                        <th>Contact Number</th>
                        <th>Special Needs</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach(function(appointment, index) { 
                        const staffMember = staffMembers.find(s => s._id.toString() === appointment.specialist);
                    %>
                    <tr id="appointment-<%= appointment._id %>">
                        <td><%= index + 1 %></td>
                        <td class="editable customerName"><%= appointment.customerName %></td>
                        <td class="editable serviceType"><%= appointment.serviceType %></td>
                        <td class="editable specialist" data-specialist-id="<%= appointment.specialist %>"><%= staffMember ? staffMember.name : 'N/A' %></td>
                        <td class="editable dateTime"><%= appointment.dateTime.toISOString().slice(0,16).replace('T', ' ') %></td>
                        <td class="editable contactNumber"><%= appointment.contactNumber %></td>
                        <td class="editable specialNeeds"><%= appointment.specialNeeds || '-' %></td>
                        <td>
                            <button type="button" class="edit-btn" onclick="enableEditing('appointment-<%= appointment._id %>')">Edit</button>
                            <form action="/delete-appointment" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="<%= appointment._id %>">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmModal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.3); z-index:1000; align-items:center; justify-content:center;">
        <div style="background:#fff; padding:30px 40px; border-radius:8px; box-shadow:0 2px 8px rgba(0,0,0,0.2); text-align:center;">
            <p style="margin-bottom:20px;">Are you sure to delete?</p>
            <button id="confirmDeleteBtn" style="margin-right:20px;">Yes</button>
            <button id="cancelDeleteBtn">No</button>
        </div>
    </div>

    <script>
// Staff options for editing (defined globally for reliability)
const staffOptions = <%- JSON.stringify(staffMembers.map(s => ({ id: s._id.toString(), name: s.name, jobTitle: s.jobTitle }))) %>;

document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector('#appointmentForm');
    
    // Form submission handler
    form.addEventListener('submit', function(event) {
        event.preventDefault();
        event.stopPropagation();
        
        const formData = new FormData(form);
        const jsonData = {};
        formData.forEach((value, key) => {
            if (key === 'dateTime') {
                const localDateTime = new Date(value);
                jsonData[key] = new Date(localDateTime.getTime() - (localDateTime.getTimezoneOffset() * 60000)).toISOString();
            } else {
                jsonData[key] = value;
            }
        });

        fetch('/appointments', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(jsonData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                form.reset();
                addAppointmentToTable(data.appointment, data.id);
                alert('Appointment booked successfully!');
                attachDeleteConfirmation(); // Attach confirmation to new delete button
            } else {
                alert('Failed to book appointment');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error booking appointment. Please try again.');
        });
        
        return false;
    });

    attachDeleteConfirmation(); // Attach confirmation on initial load
});

let formToDelete = null;

function attachDeleteConfirmation() {
    document.querySelectorAll('form[action="/delete-appointment"]').forEach(form => {
        // Remove previous listener to avoid multiple triggers
        form.removeEventListener('submit', handleDeleteSubmit);
        form.addEventListener('submit', handleDeleteSubmit);
    });
}

function handleDeleteSubmit(e) {
    e.preventDefault();
    formToDelete = this;
    document.getElementById('deleteConfirmModal').style.display = 'flex';
}

document.getElementById('confirmDeleteBtn').onclick = function() {
    if (formToDelete) {
        formToDelete.submit();
        formToDelete = null;
    }
    document.getElementById('deleteConfirmModal').style.display = 'none';
};

document.getElementById('cancelDeleteBtn').onclick = function() {
    formToDelete = null;
    document.getElementById('deleteConfirmModal').style.display = 'none';
};

function addAppointmentToTable(appointment, id) {
    const table = document.querySelector('table tbody');
    const rowCount = table.querySelectorAll('tr').length;
    const newRow = document.createElement('tr');
    newRow.id = `appointment-${id}`;
    newRow.innerHTML = `
        <td>${rowCount + 1}</td>
        <td class="editable customerName">${appointment.customerName}</td>
        <td class="editable serviceType">${appointment.serviceType}</td>
        <td class="editable specialist" data-specialist-id="${appointment.specialist}">${appointment.specialistName}</td>
        <td class="editable dateTime">${new Date(appointment.dateTime).toISOString().slice(0,16).replace('T', ' ')}</td>
        <td class="editable contactNumber">${appointment.contactNumber}</td>
        <td class="editable specialNeeds">${appointment.specialNeeds || '-'}</td>
        <td>
            <button type="button" class="edit-btn" onclick="enableEditing('appointment-${id}')">Edit</button>
            <form action="/delete-appointment" method="post" style="display: inline;">
                <input type="hidden" name="id" value="${id}">
                <button type="submit" class="delete-btn">Delete</button>
            </form>
        </td>
    `;
    table.appendChild(newRow);
}

function enableEditing(rowId) {
    const row = document.getElementById(rowId);
    
    // Add editing class for expanded row styling
    row.classList.add('editing');
    
    row.querySelectorAll('.editable').forEach(cell => {
        const key = cell.classList[1];
        if (key === 'dateTime') {
            cell.innerHTML = `<input autocomplete="off" type="datetime-local" name="${key}" value="${cell.textContent.trim().replace(' ', 'T')}">`;
        } else if (key === 'specialist') {
            const currentSpecialistId = cell.getAttribute('data-specialist-id');
            let selectHtml = `<select name="${key}">`;
            staffOptions.forEach(staff => {
                const selected = staff.id === currentSpecialistId ? 'selected' : '';
                selectHtml += `<option value="${staff.id}" ${selected}>${staff.name} - ${staff.jobTitle}</option>`;
            });
            selectHtml += '</select>';
            cell.innerHTML = selectHtml;
        } else {
            cell.innerHTML = `<input autocomplete="off" type="text" name="${key}" value="${cell.textContent.trim()}">`;
        }
    });

    const editButton = row.querySelector('.edit-btn');
    editButton.textContent = 'Save';
    editButton.setAttribute('onclick', `saveChanges('${rowId}')`);
    
    // Add cancel button if not already present
    if (!row.querySelector('.cancel-btn')) {
        const cancelBtn = document.createElement('button');
        cancelBtn.type = 'button';
        cancelBtn.className = 'cancel-btn';
        cancelBtn.textContent = 'Cancel';
        cancelBtn.setAttribute('onclick', 'location.reload()');
        editButton.parentNode.insertBefore(cancelBtn, editButton.nextSibling);
    }
}

function saveChanges(rowId) {
    const row = document.getElementById(rowId);
    const formData = {};
    row.querySelectorAll('input, select').forEach(input => formData[input.name] = input.value);
    
    // Extract appointment ID from rowId (format: appointment-<mongoId>)
    const appointmentId = rowId.replace('appointment-', '');

    fetch(`/update-appointment`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: appointmentId, ...formData })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Failed to update appointment');
        }
    })
    .catch(error => console.error('Error:', error));
}

    </script>
    <%- include('partials/globalScripts') %>
</body>
</html>
