<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Management</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/navbarstyle.css">
    <link rel="stylesheet" href="/styles/headerstyle.css">
    <style>
        body {
            font-family: 'Gowun Batang', serif;
            background-color: #D3E4CD;
            color: #1a202c;
            margin: 0;
            padding: 0;
        }

        .page-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 15px 20px;
        }

        /* Page Header */
        .page-header {
            margin-bottom: 20px;
        }

        .page-header h1 {
            font-size: 26px;
            font-weight: 700;
            color: #1a202c;
            margin-bottom: 6px;
        }

        .page-header p {
            font-size: 14px;
            color: #718096;
        }

        /* Add Appointment Section */
        .add-appointment-section {
            background: #F5F5DC;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-left: 4px solid #D97C17;
        }

        .add-appointment-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 16px;
        }

        .add-appointment-header i {
            color: #D97C17;
            font-size: 18px;
        }

        .add-appointment-header h2 {
            font-size: 16px;
            font-weight: 600;
            color: #1a202c;
            flex: 1;
        }

        .new-booking-badge {
            background: #fef3f2;
            color: #D97C17;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .appointment-form {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 16px;
        }

        .form-group {
            min-width: 0;
        }

        .form-group label {
            display: block;
            font-size: 12px;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 6px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px 14px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 14px;
            font-family: 'Gowun Batang', serif;
            transition: all 0.2s;
            box-sizing: border-box;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: #cbd5e0;
        }

        .form-actions {
            grid-column: 1 / -1;
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .btn-clear {
            padding: 10px 24px;
            background: white;
            color: #4a5568;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-clear:hover {
            background: #f7fafc;
            border-color: #cbd5e0;
        }

        .btn-book {
            padding: 10px 24px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-book:hover {
            background: #45a049;
        }

        /* Scheduled Appointments Section */
        .scheduled-section {
            background: #F5F5DC;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .scheduled-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .scheduled-header-left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .scheduled-header-left i {
            color: #D97C17;
            font-size: 18px;
        }

        .scheduled-header-left h2 {
            font-size: 18px;
            font-weight: 600;
            color: #1a202c;
        }

        .search-box {
            position: relative;
            width: 300px;
        }

        .search-box input {
            width: 100%;
            padding: 8px 12px 8px 36px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 13px;
            transition: all 0.2s;
        }

        .search-box input:focus {
            outline: none;
            border-color: #cbd5e0;
        }

        .search-box i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            font-size: 14px;
        }

        .filter-icon {
            width: 36px;
            height: 36px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
        }

        .filter-icon:hover {
            background: #f7fafc;
        }

        /* Appointments Table */
        .appointments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 16px;
        }

        .appointments-table thead th {
            text-align: left;
            padding: 12px 16px;
            font-size: 11px;
            font-weight: 600;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #e2e8f0;
        }

        .appointments-table tbody tr {
            border-bottom: 1px solid #f7fafc;
            transition: background-color 0.2s;
        }

        .appointments-table tbody tr:hover {
            background-color: #f7fafc;
        }

        .appointments-table tbody td {
            padding: 14px 16px;
            font-size: 14px;
            color: #1a202c;
        }

        .sl-no {
            width: 60px;
            color: #718096;
            font-weight: 500;
        }

        .customer-cell {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 14px;
            color: white;
            flex-shrink: 0;
        }

        .customer-info {
            min-width: 0;
        }

        .customer-name {
            font-weight: 500;
            color: #1a202c;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .service-cell {
            max-width: 200px;
        }

        .service-name {
            font-weight: 500;
            color: #1a202c;
            margin-bottom: 2px;
        }

        .stylist-name {
            font-size: 12px;
            color: #718096;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .stylist-name i {
            font-size: 10px;
        }

        .timing-cell {
            min-width: 120px;
        }

        .timing-date {
            font-weight: 500;
            color: #1a202c;
            margin-bottom: 2px;
        }

        .timing-time {
            font-size: 12px;
            color: #D97C17;
            font-weight: 500;
        }

        .contact-cell {
            color: #4a5568;
            font-size: 13px;
        }

        .notes-tag {
            display: inline-block;
            padding: 4px 10px;
            background: #fef3f2;
            color: #D97C17;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 500;
        }

        .actions-cell {
            display: flex;
            gap: 8px;
        }

        .action-btn {
            width: 32px;
            height: 32px;
            border: none;
            background: transparent;
            border-radius: 6px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .action-btn.edit {
            color: #007BFF;
        }

        .action-btn.edit:hover {
            background: #e7f3ff;
        }

        .action-btn.delete {
            color: #ef4444;
        }

        .action-btn.delete:hover {
            background: #fef2f2;
        }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid #e2e8f0;
        }

        .pagination-info {
            font-size: 13px;
            color: #718096;
        }

        .pagination-controls {
            display: flex;
            gap: 8px;
        }

        .pagination-btn {
            padding: 8px 16px;
            background: white;
            color: #4a5568;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .pagination-btn:hover:not(:disabled) {
            background: #f7fafc;
            border-color: #cbd5e0;
        }

        .pagination-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Delete Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
            text-align: center;
            min-width: 400px;
        }

        .modal-icon {
            width: 56px;
            height: 56px;
            background: #fee2e2;
            color: #ef4444;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 24px;
        }

        .modal-content h3 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #1a202c;
        }

        .modal-content p {
            font-size: 14px;
            color: #718096;
            margin-bottom: 24px;
        }

        .modal-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .modal-btn {
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .modal-btn.cancel {
            background: #f3f4f6;
            color: #4b5563;
        }

        .modal-btn.cancel:hover {
            background: #e5e7eb;
        }

        .modal-btn.confirm {
            background: #ef4444;
            color: white;
        }

        .modal-btn.confirm:hover {
            background: #dc2626;
        }

        /* Edit mode styles */
        .appointments-table tbody tr.editing {
            background-color: #fffbeb;
        }

        .appointments-table tbody tr.editing input,
        .appointments-table tbody tr.editing select {
            width: 100%;
            padding: 6px 8px;
            border: 1px solid #e2e8f0;
            border-radius: 4px;
            font-size: 13px;
        }

        .appointments-table .action-btn.save {
            color: #10b981;
        }

        .appointments-table .action-btn.save:hover {
            background: #d1fae5;
        }

        .appointments-table .action-btn.cancel-edit {
            color: #6b7280;
        }

        .appointments-table .action-btn.cancel-edit:hover {
            background: #f3f4f6;
        }
    </style>
</head>
<body>
    <% if (userRole === 'admin') { %>
        <%- include('partials/navbar') %>
    <% } else { %>
        <%- include('partials/staffnavbar') %>
    <% } %>

    <div class="page-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>Appointment Management</h1>
            <p>Create new bookings and manage your salon schedule efficiently.</p>
        </div>

        <!-- Add New Appointment Section -->
        <div class="add-appointment-section">
            <div class="add-appointment-header">
                <i class="fas fa-plus-circle"></i>
                <h2>Add New Appointment</h2>
                <span class="new-booking-badge">New Booking</span>
            </div>
            <form id="appointmentForm" class="appointment-form">
                <div class="form-group">
                    <label for="customerName">Customer Name</label>
                    <input type="text" id="customerName" name="customerName" placeholder="Jane Doe" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="dateTime">Preferred Date & Time</label>
                    <input type="datetime-local" id="dateTime" name="dateTime" required>
                </div>
                <div class="form-group">
                    <label for="contactNumber">Contact Number</label>
                    <input type="tel" id="contactNumber" name="contactNumber" placeholder="(555) 123-4567" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="specialist">Choose Stylist</label>
                    <select id="specialist" name="specialist" required>
                        <option value="">Select Stylist</option>
                        <% staffMembers.forEach(function(staff) { %>
                            <option value="<%= staff._id %>"><%= staff.name %> - <%= staff.jobTitle %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="serviceType">Type of Service</label>
                    <input type="text" id="serviceType" name="serviceType" placeholder="e.g. Haircut" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="specialNeeds">Special Needs <span style="color: #a0aec0; font-weight: 400;">(Optional)</span></label>
                    <input type="text" id="specialNeeds" name="specialNeeds" placeholder="Allergies, etc." autocomplete="off">
                </div>
                <div class="form-actions">
                    <button type="button" class="btn-clear" onclick="document.getElementById('appointmentForm').reset()">Clear</button>
                    <button type="submit" class="btn-book">
                        <i class="fas fa-check"></i>
                        Book Appointment
                    </button>
                </div>
            </form>
        </div>

        <!-- Scheduled Appointments Section -->
        <div class="scheduled-section">
            <div class="scheduled-header">
                <div class="scheduled-header-left">
                    <i class="fas fa-calendar-alt"></i>
                    <h2>Scheduled Appointments</h2>
                </div>
                <div style="display: flex; gap: 12px; align-items: center;">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="searchInput" placeholder="Search..." onkeyup="searchAppointments()">
                    </div>
                    <div class="filter-icon">
                        <i class="fas fa-filter"></i>
                    </div>
                </div>
            </div>

            <table class="appointments-table">
                <thead>
                    <tr>
                        <th>SL NO</th>
                        <th>NAME</th>
                        <th>SERVICE & STYLIST</th>
                        <th>TIMING</th>
                        <th>CONTACT</th>
                        <th>NOTES</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody id="appointmentsTableBody">
                    <% 
                    const colors = ['#f97316', '#3b82f6', '#8b5cf6', '#ec4899', '#10b981', '#f59e0b'];
                    appointments.forEach(function(appointment, index) { 
                        const staffMember = staffMembers.find(s => s._id.toString() === appointment.specialist);
                        const initials = appointment.customerName.split(' ').map(n => n[0]).join('').substring(0, 2);
                        const avatarColor = colors[index % colors.length];
                        const appointmentDate = new Date(appointment.dateTime);
                        const formattedDate = appointmentDate.toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' });
                        const formattedTime = appointmentDate.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
                    %>
                    <tr id="appointment-<%= appointment._id %>" data-appointment='<%- JSON.stringify({
                        customerName: appointment.customerName,
                        serviceType: appointment.serviceType,
                        specialist: appointment.specialist,
                        dateTime: appointment.dateTime,
                        contactNumber: appointment.contactNumber,
                        specialNeeds: appointment.specialNeeds
                    }) %>'>
                        <td class="sl-no"><%= index + 1 %></td>
                        <td>
                            <div class="customer-cell">
                                <div class="avatar" style="background-color: <%= avatarColor %>"><%= initials %></div>
                                <div class="customer-info">
                                    <div class="customer-name editable-field" data-field="customerName"><%= appointment.customerName %></div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="service-cell">
                                <div class="service-name editable-field" data-field="serviceType"><%= appointment.serviceType %></div>
                                <div class="stylist-name editable-field" data-field="specialist" data-specialist-id="<%= appointment.specialist %>">
                                    <i class="fas fa-user"></i>
                                    <%= staffMember ? staffMember.name : 'N/A' %>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="timing-cell editable-field" data-field="dateTime">
                                <div class="timing-date"><%= formattedDate %></div>
                                <div class="timing-time"><%= formattedTime %></div>
                            </div>
                        </td>
                        <td class="contact-cell editable-field" data-field="contactNumber"><%= appointment.contactNumber %></td>
                        <td class="editable-field" data-field="specialNeeds">
                            <% if (appointment.specialNeeds) { %>
                                <span class="notes-tag"><%= appointment.specialNeeds %></span>
                            <% } else { %>
                                --
                            <% } %>
                        </td>
                        <td>
                            <div class="actions-cell">
                                <button class="action-btn edit" onclick="enableEditing('<%= appointment._id %>')" title="Edit">
                                    <i class="fas fa-pen"></i>
                                </button>
                                <button class="action-btn delete" onclick="confirmDelete('<%= appointment._id %>')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

            <div class="pagination-container">
                <div class="pagination-info">
                    Showing 1 to <%= Math.min(5, appointments.length) %> of <%= appointments.length %> results
                </div>
                <div class="pagination-controls">
                    <button class="pagination-btn" disabled>Previous</button>
                    <button class="pagination-btn" disabled>Next</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmModal" class="modal">
        <div class="modal-content">
            <div class="modal-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3>Delete Appointment?</h3>
            <p>Are you sure you want to delete this appointment?<br>This action cannot be undone.</p>
            <form id="deleteForm" action="/delete-appointment" method="post">
                <input type="hidden" name="id" id="deleteAppointmentId">
                <div class="modal-actions">
                    <button type="button" class="modal-btn cancel" onclick="closeDeleteModal()">Cancel</button>
                    <button type="submit" class="modal-btn confirm">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Staff options for editing
        const staffOptions = <%- JSON.stringify(staffMembers.map(s => ({ id: s._id.toString(), name: s.name, jobTitle: s.jobTitle }))) %>;

        // Form submission
        document.getElementById('appointmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const jsonData = {};
            formData.forEach((value, key) => {
                if (key === 'dateTime') {
                    const localDateTime = new Date(value);
                    jsonData[key] = new Date(localDateTime.getTime() - (localDateTime.getTimezoneOffset() * 60000)).toISOString();
                } else {
                    jsonData[key] = value;
                }
            });

            fetch('/appointments', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(jsonData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.reset();
                    alert('Appointment booked successfully!');
                    location.reload();
                } else {
                    alert('Failed to book appointment');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error booking appointment. Please try again.');
            });
        });

        // Search functionality
        function searchAppointments() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('appointmentsTableBody');
            const rows = table.getElementsByTagName('tr');

            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];
                const text = row.textContent || row.innerText;
                if (text.toLowerCase().indexOf(filter) > -1) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            }
        }

        // Enable editing
        function enableEditing(appointmentId) {
            const row = document.getElementById('appointment-' + appointmentId);
            const appointmentData = JSON.parse(row.getAttribute('data-appointment'));
            
            row.classList.add('editing');
            
            // Customer Name
            const customerNameCell = row.querySelector('[data-field="customerName"]');
            customerNameCell.innerHTML = `<input type="text" name="customerName" value="${appointmentData.customerName}">`;
            
            // Service Type
            const serviceCell = row.querySelector('[data-field="serviceType"]');
            serviceCell.innerHTML = `<input type="text" name="serviceType" value="${appointmentData.serviceType}">`;
            
            // Stylist
            const stylistCell = row.querySelector('[data-field="specialist"]');
            let stylistOptions = '<select name="specialist">';
            staffOptions.forEach(staff => {
                const selected = staff.id === appointmentData.specialist ? 'selected' : '';
                stylistOptions += `<option value="${staff.id}" ${selected}>${staff.name} - ${staff.jobTitle}</option>`;
            });
            stylistOptions += '</select>';
            stylistCell.innerHTML = stylistOptions;
            
            // DateTime
            const dateTimeCell = row.querySelector('[data-field="dateTime"]');
            const dateTimeValue = new Date(appointmentData.dateTime).toISOString().slice(0, 16);
            dateTimeCell.innerHTML = `<input type="datetime-local" name="dateTime" value="${dateTimeValue}">`;
            
            // Contact Number
            const contactCell = row.querySelector('[data-field="contactNumber"]');
            contactCell.innerHTML = `<input type="text" name="contactNumber" value="${appointmentData.contactNumber}">`;
            
            // Special Needs
            const specialNeedsCell = row.querySelector('[data-field="specialNeeds"]');
            specialNeedsCell.innerHTML = `<input type="text" name="specialNeeds" value="${appointmentData.specialNeeds || ''}">`;
            
            // Change action buttons
            const actionsCell = row.querySelector('.actions-cell');
            actionsCell.innerHTML = `
                <button class="action-btn save" onclick="saveChanges('${appointmentId}')" title="Save">
                    <i class="fas fa-check"></i>
                </button>
                <button class="action-btn cancel-edit" onclick="location.reload()" title="Cancel">
                    <i class="fas fa-times"></i>
                </button>
            `;
        }

        // Save changes
        function saveChanges(appointmentId) {
            const row = document.getElementById('appointment-' + appointmentId);
            const inputs = row.querySelectorAll('input, select');
            const formData = {};
            
            inputs.forEach(input => {
                formData[input.name] = input.value;
            });
            
            fetch('/update-appointment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: appointmentId, ...formData })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Failed to update appointment');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating appointment');
            });
        }

        // Delete confirmation
        function confirmDelete(appointmentId) {
            document.getElementById('deleteAppointmentId').value = appointmentId;
            document.getElementById('deleteConfirmModal').style.display = 'flex';
        }

        function closeDeleteModal() {
            document.getElementById('deleteConfirmModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('deleteConfirmModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        };
    </script>
    <%- include('partials/globalScripts') %>
</body>
</html>
