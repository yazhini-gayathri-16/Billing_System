<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Menu Management</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/menustyle.css">
    <style>
        /* Delete Confirmation Modal Styles (referenced from appointmentstyle.css) */
        #deleteConfirmModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.3);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        #deleteConfirmModal .modal-content {
            background: #fff;
            padding: 30px 40px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            text-align: center;
            min-width: 250px;
        }
        #deleteConfirmModal p {
            margin-bottom: 20px;
            font-size: 1.1em;
            color: #333;
        }
        #deleteConfirmModal button {
            background-color: #D97C17;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-right: 20px;
            font-size: 1em;
        }
        #deleteConfirmModal button:last-child {
            margin-right: 0;
            background-color: #6c757d;
        }
        #deleteConfirmModal button:hover {
            background-color: #A65B0F;
        }
        #deleteConfirmModal button#cancelDeleteBtn:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>
    <% if (userRole === 'admin') { %>
        <%- include('partials/navbar') %>
    <% } else { %>
        <%- include('partials/staffnavbar') %>
    <% } %>

    <div class="container">
        <!-- Add Service Form -->
        <div class="menu-form">
            <h1>Menu Management</h1>
            <form action="/add-service" method="post" class="form-inline">
                <input autocomplete="off" type="text" name="serviceName" placeholder="Enter service name" required>
                <input autocomplete="off" type="number" name="regularPrice" placeholder="Regular price" required>
                <input autocomplete="off" type="number" name="membershipPrice" placeholder="Membership price" required>
                <button type="submit">Add Service</button>
            </form>
        </div>

        <!-- Displaying Services -->
        <div class="service-container">
            <% services.forEach(function(service, index) { %>
                <!-- Card for Regular Price -->
                <div class="service-card">
                    <form id="service-form-regular-<%= index %>" class="service-form" action="/edit-service" method="post">
                        <input type="hidden" name="id" value="<%= service._id %>">
                        <p><strong>Service Name:</strong> <span class="service-name"><%= service.serviceName %></span></p>
                        <p><strong>Price Type:</strong> Regular Price</p>
                        <p><strong>Price:</strong> ₹<span class="regular-price"><%= service.regularPrice %></span></p>
                        <div class="button-group">
                            <button type="button" class="edit-btn" onclick="enableEditing('service-form-regular-<%= index %>')">Edit</button>
                            <button type="button" class="delete-btn-yellow" onclick="confirmDelete('<%= service._id %>', '<%= service.serviceName %>')">Delete</button>
                        </div>
                    </form>
                </div>

                <!-- Card for Membership Price -->
                <div class="service-card">
                    <form id="service-form-membership-<%= index %>" class="service-form" action="/edit-service" method="post">
                        <input type="hidden" name="id" value="<%= service._id %>">
                        <p><strong>Service Name:</strong> <span class="service-name"><%= service.serviceName %></span></p>
                        <p><strong>Price Type:</strong> Membership Price</p>
                        <p><strong>Price:</strong> ₹<span class="membership-price"><%= service.membershipPrice %></span></p>
                        <div class="button-group">
                            <button type="button" class="edit-btn" onclick="enableEditing('service-form-membership-<%= index %>')">Edit</button>
                            <button type="button" class="delete-btn-yellow" onclick="confirmDelete('<%= service._id %>', '<%= service.serviceName %>')">Delete</button>
                        </div>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmModal">
        <div class="modal-content">
            <p>Are you sure you want to delete "<span id="deleteServiceName"></span>"?</p>
            <p style="font-size: 0.9em; color: #666; margin-top: -10px;">This will delete both Regular and Membership prices.</p>
            <form id="deleteForm" action="/delete-service" method="post">
                <input type="hidden" name="id" id="deleteServiceId">
                <button type="submit" id="confirmDeleteBtn">Yes</button>
                <button type="button" id="cancelDeleteBtn">No</button>
            </form>
        </div>
    </div>

    <script>
        function enableEditing(formId) {
            const form = document.getElementById(formId);
            const serviceName = form.querySelector('.service-name');
            const regularPrice = form.querySelector('.regular-price');
            const membershipPrice = form.querySelector('.membership-price');

            serviceName.innerHTML = `<input type="text" name="serviceName" value="${serviceName.textContent.trim()}" required>`;
            if (regularPrice) {
                regularPrice.innerHTML = `<input type="number" name="regularPrice" value="${regularPrice.textContent.trim()}" required>`;
            }
            if (membershipPrice) {
                membershipPrice.innerHTML = `<input type="number" name="membershipPrice" value="${membershipPrice.textContent.trim()}" required>`;
            }

            const buttonGroup = form.querySelector('.button-group');
            buttonGroup.innerHTML = `
                <button type="submit">Update</button>
                <button type="button" class="cancel-btn" onclick='cancelEdit("${formId}")'>Cancel</button>`;
        }

        function cancelEdit(formId) {
            const form = document.getElementById(formId);
            const serviceNameInput = form.querySelector('.service-name input');
            const regularPriceInput = form.querySelector('.regular-price input');
            const membershipPriceInput = form.querySelector('.membership-price input');

            form.querySelector('.service-name').innerHTML = serviceNameInput ? serviceNameInput.value : '';
            if (regularPriceInput) {
                form.querySelector('.regular-price').innerHTML = regularPriceInput.value;
            }
            if (membershipPriceInput) {
                form.querySelector('.membership-price').innerHTML = membershipPriceInput.value;
            }

            const buttonGroup = form.querySelector('.button-group') || form.querySelector('button[type="submit"]').parentElement;
            const serviceId = form.querySelector('input[name="id"]').value;
            buttonGroup.innerHTML = `
                <button type="button" class="edit-btn" onclick='enableEditing("${formId}")'>Edit</button>
                <button type="button" class="delete-btn-yellow" onclick="confirmDelete('${serviceId}', '${serviceNameInput ? serviceNameInput.value : ''}')">Delete</button>`;
        }

        // Delete confirmation logic
        function confirmDelete(serviceId, serviceName) {
            document.getElementById('deleteServiceId').value = serviceId;
            document.getElementById('deleteServiceName').textContent = serviceName;
            document.getElementById('deleteConfirmModal').style.display = 'flex';
        }

        document.getElementById('cancelDeleteBtn').onclick = function() {
            document.getElementById('deleteConfirmModal').style.display = 'none';
        };

        // Close modal when clicking outside
        document.getElementById('deleteConfirmModal').onclick = function(e) {
            if (e.target === this) {
                this.style.display = 'none';
            }
        };
    </script>
    <%- include('partials/globalScripts') %>
    
</body>
</html>
