        function calculateGrandTotal() {
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            const addGstToBill = document.getElementById('addGstToBill');
            const gstMessage = document.getElementById('gstMessage');
            let discount = 0;

            if (discountType === 'percentage') {
                const discountPercent = parseFloat(document.getElementById('discountPercentageInput').value) || 0;
                discount = subtotal * (discountPercent / 100);
            } else {
                discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            }

            const netTotal = Math.max(0, subtotal - discount);
            
            // Apply GST if toggle is ON
            let grandTotal = netTotal;
            if (addGstToBill.checked) {
                const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
                const gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
                const gstRate = gstPercentage / 100;
                const gstAmount = parseFloat(netTotal.toFixed(2)) * gstRate;
                grandTotal = parseFloat(netTotal.toFixed(2)) + gstAmount;
                gstMessage.textContent = `GST (${gstPercentage}%): ₹${gstAmount.toFixed(2)}`;
                gstMessage.style.color = '#4CAF50';
                gstMessage.style.padding = '0px';
                gstMessage.style.fontSize = '13px';
                gstMessage.style.margin = '0px';
                gstMessage.style.fontWeight = '500';
            } else {
                gstMessage.textContent = '';
            }

            document.getElementById('grandTotal').value = grandTotal.toFixed(2);
        }

        function calculaterupeesGrandTotal() {
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            const discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            const grandTotal = subtotal - discount;
            document.getElementById('grandTotal').value = grandTotal.toFixed(2);
        }

        function updateSubtotal() {
            const priceInputs = document.querySelectorAll('[name^="prices"]');
            const subtotal = Array.from(priceInputs).reduce((total, input) => {
                return total + (parseFloat(input.value) || 0);
            }, 0);
            document.getElementById('subtotal').value = subtotal.toFixed(2);
            calculateGrandTotal(); // Recalculate the grand total when subtotal changes
        }

        // Bill Preview Functions
        function showBillPreview() {
            // Validate required fields
            const customerName = document.getElementById('customerName').value;
            const customerNumber = document.getElementById('customerNumber').value;
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            
            if (!customerName || !customerNumber) {
                alert('Please fill in customer name and contact number');
                return;
            }
            
            if (subtotal === 0) {
                alert('Please add at least one package');
                return;
            }
            
            // Format date
            const dateVal = document.getElementById('date').value;
            const timeVal = document.getElementById('time').value;
            const dateObj = new Date(dateVal);
            const formattedDate = String(dateObj.getDate()).padStart(2, '0') + '-' + 
                                  String(dateObj.getMonth() + 1).padStart(2, '0') + '-' + 
                                  dateObj.getFullYear();
            
            // Populate preview
            document.getElementById('previewDate').textContent = formattedDate;
            document.getElementById('previewTime').textContent = timeVal;
            document.getElementById('previewCustomerName').textContent = customerName;
            document.getElementById('previewCustomerPhone').textContent = customerNumber;
            document.getElementById('previewBillNumber').textContent = document.getElementById('invoiceNumber').value;
            
            // Get packages
            const servicesBody = document.getElementById('previewServicesBody');
            servicesBody.innerHTML = '';
            
            let grossTotal = 0;
            const serviceItems = document.querySelectorAll('.service-item');
            serviceItems.forEach((item, index) => {
                const packageInput = item.querySelector('[name^="packages"]');
                const priceInput = item.querySelector('[name^="prices"]');
                const includedServicesInput = item.querySelector('[name^="includedServices"]');
                
                if (packageInput && packageInput.value && priceInput && priceInput.value) {
                    const price = parseFloat(priceInput.value) || 0;
                    grossTotal += price;
                    const includedServices = includedServicesInput ? includedServicesInput.value : '';
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${packageInput.value}${includedServices ? '<br><small style="color:#666;">(' + includedServices + ')</small>' : ''}</td>
                        <td>${price.toFixed(2)}</td>
                        <td>1</td>
                        <td>0.00</td>
                        <td>${price.toFixed(2)}</td>
                    `;
                    servicesBody.appendChild(row);
                }
            });
            
            // Calculate discount
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            let discount = 0;
            
            if (discountType === 'percentage') {
                const discountPercent = parseFloat(document.getElementById('discountPercentageInput').value) || 0;
                discount = subtotal * (discountPercent / 100);
            } else {
                discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            }
            
            // Update table footer
            document.getElementById('previewGrossTotal').textContent = grossTotal.toFixed(2);
            document.getElementById('previewTotalDiscount').textContent = discount.toFixed(2);
            
            const netTotal = grossTotal - discount;
            document.getElementById('previewNetTotal').textContent = netTotal.toFixed(2);
            
            // Update summary
            document.getElementById('previewSummaryGross').textContent = grossTotal.toFixed(2);
            document.getElementById('previewSummaryDiscount').textContent = discount.toFixed(2);
            
            // Check for GST - based on addGstToBill toggle
            const addGstToBill = document.getElementById('addGstToBill');
            const gstRow = document.getElementById('previewGstRow');
            let grandTotal = netTotal;
            
            if (addGstToBill.checked) {
                const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
                const gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
                const gstAmount = netTotal * (gstPercentage / 100);
                document.getElementById('previewGstLabel').textContent = `GST (${gstPercentage}%)`;
                document.getElementById('previewGst').textContent = gstAmount.toFixed(2);
                gstRow.style.display = 'flex';
                grandTotal = netTotal + gstAmount;
            } else {
                gstRow.style.display = 'none';
            }
            
            document.getElementById('previewGrandTotal').textContent = grandTotal.toFixed(2);
            document.getElementById('previewNetAmount').textContent = netTotal.toFixed(2);
            
            // GST Number is always displayed (mandatory)
            document.getElementById('previewGstNumber').style.display = 'block';
            
            // Show modal
            document.getElementById('billPreviewModal').style.display = 'block';
        }
        
        function closeBillPreview() {
            document.getElementById('billPreviewModal').style.display = 'none';
        }
        
