<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noble Evergreen - Product Billing</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/billingstyle.css">
</head>
<body>
    <% if (userRole === 'admin') { %>
        <%- include('partials/navbar') %>
    <% } else { %>
        <%- include('partials/staffnavbar') %>
    <% } %>
    <%- include('partials/billing_nav') %>
    <div class="container">
        <div class="billing-form">
            <h1>Generate Product Bill</h1>
            <form onsubmit="submitBillForm(event)" id="billForm">
                <input type="text" value="product" name="billType" hidden>
    
                <!-- Customer Details -->
                <div class="form-row">
                    <div class="form-group basis">
                        <label>Customer Name<span style="color: red;">*</span></label>
                        <input type="text" name="customer_name" id="customerName" required placeholder="Enter customer name" autocomplete="off">
                    </div>
                    <div class="form-group basis">
                        <label>Contact Number<span style="color: red;">*</span></label>
                        <input type="number" name="customer_number" id="customerNumber" autocomplete="off" required placeholder="Enter contact number" oninput="fetchClientDetails()">
                    </div>
                    <div class="form-group basis-short">
                        <label>Date</label>
                        <input type="date" id="date" name="date" readonly>
                    </div>
                    <div class="form-group basis-short">
                        <label>Time</label>
                        <input type="time" id="time" name="time" readonly>
                    </div>
                    <div class="form-group basis-short">
                        <label>Gender :</label>
                        <select name="gender" id="gender" required>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <!-- Invoice Number and Membership Row -->
                <div class="form-row">
                    <div class="form-group" style="max-width: 180px;">
                        <label>Invoice No :</label>
                        <input type="text" id="invoiceNumber" name="invoiceNumber" readonly style="background-color: #f0f0f0; font-weight: bold; color: #333;">
                    </div>
                    <div class="form-group">
                        <label>Do you have a membership?</label>
                        <input type="checkbox" id="hasMembership" name="hasMembership">
                    </div>
                </div>
                <input type="hidden" id="membershipID" name="membershipID">

                <!-- Products Section -->
                <div id="product-container">
                    <div class="product-item">
                        <div class="form-row">
                            <div class="form-group basis-service">
                                <label>Product</label>
                                <div class="autocomplete-wrapper">
                                    <input type="text" autocomplete="off" name="products1" required placeholder="Enter product" oninput="filterProducts(this)" onfocus="filterProducts(this)">
                                    <div class="autocomplete-dropdown" id="productDropdown1"></div>
                                </div>
                            </div>
                            <div class="form-group basis-price">
                                <label>Price</label>
                                <input type="number" name="prices1" required readonly>
                            </div>
                            <div class="form-group basis-quantity">
                                <label>Quantity</label>
                                <input type="number" name="quantities1" required min="1" value="1" oninput="updateSubtotal()">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="add-more-button">
                    <button type="button" onclick="addMore()">Add More</button>
                </div>

                <!-- Payment Section -->
                <div class="form-row">
                    <div class="form-group-PM">
                        <label>Payment Method:</label>
                        <div>
                            <input type="radio" id="paymentUPI" name="paymentMethod" value="UPI" checked required>
                            <label for="paymentUPI">UPI</label>
                            <input type="radio" id="paymentCard" name="paymentMethod" value="Card">
                            <label for="paymentCard">Card</label>
                            <input type="radio" id="paymentCash" name="paymentMethod" value="Cash">
                            <label for="paymentCash">Cash</label>
                        </div>
                    </div>
                    <div class="form-group grow">
                        <label>Subtotal:</label>
                        <input type="number" name="subtotal" id="subtotal" readonly>
                    </div>
                </div>

                <!-- Discount Section -->
                <div class="form-row">
                    <div class="form-group">
                        <label>Discount Type</label>
                        <label>
                            <input type="radio" name="discountType" value="percentage" id="discountPercentage" checked onchange="toggleDiscountType()">
                            Percentage
                        </label>
                        <label>
                            <input type="radio" name="discountType" value="rupees" id="discountRupees" onchange="toggleDiscountType()">
                            Rupees
                        </label>
                    </div>
                    <div class="form-group" id="percentageDiscountField">
                        <label>Discount (%)</label>
                        <input type="number" name="discountPercentage" id="discountPercentageInput" oninput="calculateGrandTotal()">
                    </div>
                    <div class="form-group" id="rupeesDiscountField" style="display:none">
                        <label>Discount (₹)</label>
                        <input type="number" name="discountRupees" id="discountRupeesInput" oninput="calculaterupeesGrandTotal()">
                    </div>
                </div>

                <div class="form-group">
                    <label>Grand Total:</label>
                    <input type="number" name="grandTotal" id="grandTotal" readonly>
                    <p id="gstMessage"></p>
                </div>

                <!-- Add GST to Bill Toggle -->
                <div style="display: flex; flex-direction: column; gap: 10px; margin-bottom: 15px;">
                    <div style="display: flex; align-items: center; gap: 10px; flex: none;">
                        <label for="addGstToBill" style="margin: 0; font-weight: bold;">Add GST to the Bill:</label>
                        <label class="gst-toggle-switch">
                            <input type="checkbox" id="addGstToBill" name="addGstToBill" onchange="toggleGstOptions()">
                            <span class="gst-toggle-slider"></span>
                        </label>
                        <span id="gstToggleStatus" style="font-size: 12px; color: #666;">OFF</span>
                    </div>
                    <!-- GST Percentage Radio Buttons -->
                    <div id="gstPercentageOptions" style="display: none; margin-left: 10px; padding: 10px; background: #f9f9f9; border-radius: 5px; border: 1px solid #ddd;">
                        <label style="font-weight: 500; margin-right: 15px;">Select GST Rate:</label>
                        <div style="display: flex; gap: 20px; margin-top: 8px;">
                            <label style="display: flex; align-items: center; gap: 5px; cursor: pointer;">
                                <input type="radio" name="gstPercentage" value="5" onchange="calculateGrandTotal()">
                                <span>5%</span>
                            </label>
                            <label style="display: flex; align-items: center; gap: 5px; cursor: pointer;">
                                <input type="radio" name="gstPercentage" value="12" onchange="calculateGrandTotal()">
                                <span>12%</span>
                            </label>
                            <label style="display: flex; align-items: center; gap: 5px; cursor: pointer;">
                                <input type="radio" name="gstPercentage" value="18" checked onchange="calculateGrandTotal()">
                                <span>18%</span>
                            </label>
                            <label style="display: flex; align-items: center; gap: 5px; cursor: pointer;">
                                <input type="radio" name="gstPercentage" value="28" onchange="calculateGrandTotal()">
                                <span>28%</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="button-row">
                    <button type="button" class="button-generate" onclick="showBillPreview()">Preview Bill</button>
                    <button type="submit" class="button-generate">Generate Bill</button>
                </div>
            </form>
        </div>

        <!-- Client 360 Section -->
        <div class="client-details">
            <h3>Client 360°</h3>
            <div class="specific-section">
                <div class="form-group">
                    <label>Customer Name</label>
                    <span id="cust_name">-</span>
                </div>
                <div class="form-group">
                    <label>Customer Type</label>
                    <span id="customerType">-</span>
                </div>
                <div class="form-group">
                    <label>Last Visit</label>
                    <span id="lastVisit">-</span>
                </div>
                <div class="form-group">
                    <label>Total Visits</label>
                    <span id="totalVisits">-</span>
                </div>
                <div class="form-group">
                    <label>Total Spendings</label>
                    <span id="totalSpendings">-</span> INR
                </div>
                <div class="form-group">
                    <label>Previous Services</label>
                    <span id="previousServices">-</span>
                </div>
                <div class="form-group">
                    <label>Previous Products</label>
                    <span id="previousProducts">-</span>
                </div>
                <div class="form-group">
                    <label>Membership Status</label>
                    <span id="membershipStatus">-</span>
                </div>
                <div class="form-group">
                    <label>Birthday Offer</label>
                    <span id="birthdayOfferStatus">-</span>
                </div>
                <div class="form-group">
                    <label>Anniversary Offer</label>
                    <span id="anniversaryOfferStatus">-</span>
                </div>
            </div>             
        </div>
    </div>

    <script>
        let products = [];
        let productCount = 1;

        window.onload = function() {
            updateDateTime();
            setInterval(updateDateTime, 1000);
            setupEventListeners();
            setupGstToggle(); // Setup GST toggle

            fetch("/api/products")
                .then(response => response.json())
                .then(data => { products = data; })
                .catch(error => console.error('Error:', error));
        };

        function setupGstToggle() {
            const gstToggle = document.getElementById('addGstToBill');
            const gstStatus = document.getElementById('gstToggleStatus');
            
            gstToggle.addEventListener('change', function() {
                gstStatus.textContent = this.checked ? 'ON' : 'OFF';
                gstStatus.style.color = this.checked ? '#4CAF50' : '#666';
            });
        }

        function toggleGstOptions() {
            const gstToggle = document.getElementById('addGstToBill');
            const gstOptions = document.getElementById('gstPercentageOptions');
            const gstStatus = document.getElementById('gstToggleStatus');
            
            if (gstToggle.checked) {
                gstOptions.style.display = 'block';
                gstStatus.textContent = 'ON';
                gstStatus.style.color = '#4CAF50';
            } else {
                gstOptions.style.display = 'none';
                gstStatus.textContent = 'OFF';
                gstStatus.style.color = '#666';
            }
            calculateGrandTotal();
        }

        // Add all the required functions similar to index.ejs but modified for products
        // Include: updateDateTime, filterProducts, addMore, removeProduct, updateSubtotal, 
        // calculateGrandTotal, submitBillForm, etc.
        function updateDateTime() {
            const today = new Date();
            const date = today.getFullYear() + '-' + (today.getMonth() + 1).toString().padStart(2, '0') + '-' + today.getDate().toString().padStart(2, '0');
            const time = today.getHours().toString().padStart(2, '0') + ':' + today.getMinutes().toString().padStart(2, '0');
            document.getElementById('date').value = date;
            document.getElementById('time').value = time;
            
            // Fetch next invoice number
            fetchNextInvoiceNumber();
        }
        
        async function fetchNextInvoiceNumber() {
            try {
                const response = await fetch('/api/next-invoice-number');
                const data = await response.json();
                if (data.success) {
                    document.getElementById('invoiceNumber').value = data.invoiceNumber;
                }
            } catch (error) {
                console.error('Error fetching invoice number:', error);
            }
        }

        async function fetchClientDetails() {
            const number = document.getElementById('customerNumber').value;
            if (number) {
                try {
                    const response = await fetch('/search-customer', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ customerNumber: number })
                    });
                    const data = await response.json();

                    if (data.success) {
                        // Update basic customer info
                        document.getElementById('cust_name').textContent = data.cust_name || '-';
                        document.getElementById('customerType').textContent = data.customerType || '-';
                        document.getElementById('lastVisit').textContent = data.lastVisit || '-';
                        document.getElementById('totalVisits').textContent = data.visits || '-';
                        document.getElementById('totalSpendings').textContent = data.totalSpent.toLocaleString('en-IN') || '-';
                        document.getElementById('membershipStatus').textContent = data.membership || '-';

                        // Update services and products
                        document.getElementById('previousServices').textContent = 
                            data.services && data.services.length > 0 ? data.services.join(', ') : '-';
                        document.getElementById('previousProducts').textContent = 
                            data.products && data.products.length > 0 ? data.products.join(', ') : '-';

                        // Update offer status
                        document.getElementById('birthdayOfferStatus').textContent = 
                            data.canUseBirthdayOffer ? 'Available' : 'Not Available';
                        document.getElementById('anniversaryOfferStatus').textContent = 
                            data.canUseAnniversaryOffer ? 'Available' : 'Not Available';

                        // Update membership fields if applicable
                        if (document.getElementById('hasMembership').checked) {
                            document.getElementById('membershipID').value = data.membershipID || '';
                        }

                        if (data.membershipID) {
                            document.getElementById('membershipID').value = data.membershipID;
                        }
                    } else {
                        resetClientDetails();
                    }
                } catch (error) {
                    console.error('Error fetching client details:', error);
                    resetClientDetails();
                }
            } else {
                resetClientDetails();
            }
        }

        // Update the resetClientDetails function
        function resetClientDetails() {
            document.getElementById('cust_name').textContent = '-';
            document.getElementById('customerType').textContent = '-';
            document.getElementById('lastVisit').textContent = '-';
            document.getElementById('totalVisits').textContent = '-';
            document.getElementById('totalSpendings').textContent = '-';
            document.getElementById('membershipStatus').textContent = '-';
            document.getElementById('previousServices').textContent = '-';
            document.getElementById('previousProducts').textContent = '-';
            document.getElementById('birthdayOfferStatus').textContent = '-';
            document.getElementById('anniversaryOfferStatus').textContent = '-';
        }

        function setupEventListeners() {
            const container = document.getElementById('product-container');
            
            container.addEventListener('input', function(e) {
                if (e.target.name.startsWith('products')) {
                    const index = e.target.name.match(/\d+/)[0];
                    const priceInput = document.querySelector(`[name='prices${index}']`);
                    const selectedProduct = products.find(product => 
                        product.productName.toLowerCase() === e.target.value.toLowerCase()
                    );
                    
                    if (selectedProduct) {
                        priceInput.value = selectedProduct.productPrice;
                        updateSubtotal();
                    }
                }
            });
        }

        function filterProducts(input) {
            const index = input.name.match(/\d+/)[0];
            const dropdownId = `productDropdown${index}`;
            const dropdown = document.getElementById(dropdownId);
            dropdown.innerHTML = '';
            
            const searchText = input.value.toLowerCase();
            let hasResults = false;

            products.forEach(product => {
                if (product.productName.toLowerCase().includes(searchText)) {
                    hasResults = true;
                    const item = document.createElement('div');
                    item.className = 'autocomplete-item';
                    item.innerHTML = `<strong>${product.productName}</strong><span class="price-info">₹${product.productPrice}</span>`;
                    item.onclick = function() {
                        input.value = product.productName;
                        dropdown.style.display = 'none';
                        // Trigger price update
                        const event = new Event('input', { bubbles: true });
                        input.dispatchEvent(event);
                    };
                    dropdown.appendChild(item);
                }
            });

            dropdown.style.display = hasResults ? 'block' : 'none';
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.autocomplete-wrapper')) {
                document.querySelectorAll('.autocomplete-dropdown').forEach(d => d.style.display = 'none');
            }
        });

        function addMore() {
            productCount++;
            const container = document.getElementById('product-container');
            const newProduct = document.createElement('div');
            newProduct.classList.add('product-item');
            
            newProduct.innerHTML = `
                <div class="form-row">
                    <div class="form-group basis-service">
                        <label>Product:</label>
                        <div class="autocomplete-wrapper">
                            <input type="text" autocomplete="off" name="products${productCount}" required placeholder="Enter product" oninput="filterProducts(this)" onfocus="filterProducts(this)">
                            <div class="autocomplete-dropdown" id="productDropdown${productCount}"></div>
                        </div>
                    </div>
                    <div class="form-group basis-price">
                        <label>Price:</label>
                        <input type="number" name="prices${productCount}" required readonly>
                    </div>
                    <div class="form-group basis-quantity">
                        <label>Quantity:</label>
                        <input type="number" name="quantities${productCount}" required min="1" value="1" oninput="updateSubtotal()">
                    </div>
                    <span class="delete-btn" onclick="removeProduct(this)">&#128465;</span>
                </div>
            `;
            
            container.appendChild(newProduct);
        }

        function removeProduct(element) {
            element.closest('.product-item').remove();
            updateSubtotal();
        }

        function calculaterupeesGrandTotal() {
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            const discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            const grandTotal = subtotal - discount;
            document.getElementById('grandTotal').value = grandTotal.toFixed(2);
        }

        function updateSubtotal() {
            const priceInputs = document.querySelectorAll('[name^="prices"]');
            const quantityInputs = document.querySelectorAll('[name^="quantities"]');
            let subtotal = 0;
            
            for(let i = 0; i < priceInputs.length; i++) {
                const price = parseFloat(priceInputs[i].value) || 0;
                const quantity = parseInt(quantityInputs[i].value) || 0;
                subtotal += price * quantity;
            }
            
            document.getElementById('subtotal').value = subtotal.toFixed(2);
            calculateGrandTotal();
        }

        function toggleDiscountType() {
            const percentageField = document.getElementById('percentageDiscountField');
            const rupeesField = document.getElementById('rupeesDiscountField');
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            
            if (discountType === 'percentage') {
                percentageField.style.display = 'block';
                rupeesField.style.display = 'none';
                document.querySelector('input[name="discountRupees"]').value = '';
            } else {
                percentageField.style.display = 'none';
                rupeesField.style.display = 'block';
                document.querySelector('input[name="discountPercentage"]').value = '';
            }
            calculateGrandTotal();
        }

        function calculateGrandTotal() {
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            const addGstToBill = document.getElementById('addGstToBill');
            const gstMessage = document.getElementById('gstMessage');
            let discount = 0;

            if (discountType === 'percentage') {
                const percentageInput = document.querySelector('input[name="discountPercentage"]');
                let percentage = parseFloat(percentageInput.value) || 0;
                if (percentage > 100) percentage = 100;
                if (percentage < 0) percentage = 0;
                discount = (subtotal * percentage) / 100;
            } else {
                const rupeesInput = document.querySelector('input[name="discountRupees"]');
                let rupees = parseFloat(rupeesInput.value) || 0;
                if (rupees > subtotal) rupees = subtotal;
                if (rupees < 0) rupees = 0;
                discount = rupees;
            }

            if (isNaN(discount)) {
                discount = 0;
            }

            const netTotal = Math.max(0, subtotal - discount);
            
            // Apply GST if toggle is ON
            let grandTotal = netTotal;
            if (addGstToBill.checked) {
                const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
                const gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
                const gstRate = gstPercentage / 100;
                const gstAmount = parseFloat(netTotal.toFixed(2)) * gstRate;
                grandTotal = parseFloat(netTotal.toFixed(2)) + gstAmount;
                gstMessage.textContent = `GST (${gstPercentage}%): ₹${gstAmount.toFixed(2)}`;
                gstMessage.style.color = '#4CAF50';
                gstMessage.style.padding = '0px';
                gstMessage.style.fontSize = '13px';
                gstMessage.style.margin = '0px';
                gstMessage.style.fontWeight = '500';
            } else {
                gstMessage.textContent = '';
            }

            document.getElementById('grandTotal').value = grandTotal.toFixed(2);
        }

        async function submitBillForm(event) {
    event.preventDefault();

    const formData = new FormData(event.target);
    const formObject = {};

    formData.forEach((value, key) => {
        formObject[key] = value;
    });

    // Add GST values - GST number is always shown, but GST amount depends on toggle
    formObject.addGstToBill = document.getElementById('addGstToBill').checked;
    if (formObject.addGstToBill) {
        const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
        formObject.gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
    }

    const discountType = formObject.discountType;
    const subtotal = parseFloat(formObject.subtotal) || 0;

    if (discountType === 'percentage') {
        const percentage = parseFloat(formObject.discountPercentage) || 0;
        formObject.discount = (subtotal * percentage) / 100;
    } else {
        formObject.discount = parseFloat(formObject.discountRupees) || 0;
    }

    formObject.discount = parseFloat(formObject.discount.toFixed(2));

    if (isNaN(formObject.discount)) {
        formObject.discount = 0;
    }

    let netTotal = parseFloat((subtotal - formObject.discount).toFixed(2));

    // Apply GST if toggle is on
    if (formObject.addGstToBill) {
        const gstAmount = netTotal * (formObject.gstPercentage / 100);
        formObject.grandTotal = parseFloat((netTotal + gstAmount).toFixed(2));
        formObject.gstAmount = parseFloat(gstAmount.toFixed(2));
    } else {
        formObject.grandTotal = netTotal;
    }

    if (isNaN(formObject.grandTotal)) {
        formObject.grandTotal = 0;
    }

    try {
        const response = await fetch('/productbill', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formObject)
        });

        const result = await response.json();

        if (result.success) {
            alert('Bill generated and PDF sent via WhatsApp');
            window.location.reload();
        } else {
            alert('Error : ' + result.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error generating bill');
    }
}
        // Bill Preview Functions
        function showBillPreview() {
            // Validate required fields
            const customerName = document.getElementById('customerName').value;
            const customerNumber = document.getElementById('customerNumber').value;
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            
            if (!customerName || !customerNumber) {
                alert('Please fill in customer name and contact number');
                return;
            }
            
            if (subtotal === 0) {
                alert('Please add at least one product');
                return;
            }
            
            // Format date
            const dateVal = document.getElementById('date').value;
            const timeVal = document.getElementById('time').value;
            const dateObj = new Date(dateVal);
            const formattedDate = String(dateObj.getDate()).padStart(2, '0') + '-' + 
                                  String(dateObj.getMonth() + 1).padStart(2, '0') + '-' + 
                                  dateObj.getFullYear();
            
            // Populate preview
            document.getElementById('previewDate').textContent = formattedDate;
            document.getElementById('previewTime').textContent = timeVal;
            document.getElementById('previewCustomerName').textContent = customerName;
            document.getElementById('previewCustomerPhone').textContent = customerNumber;
            document.getElementById('previewBillNumber').textContent = document.getElementById('invoiceNumber').value;
            
            // Get products
            const productsBody = document.getElementById('previewProductsBody');
            productsBody.innerHTML = '';
            
            let grossTotal = 0;
            const productItems = document.querySelectorAll('.product-item');
            productItems.forEach((item, index) => {
                const productInput = item.querySelector('[name^="products"]');
                const priceInput = item.querySelector('[name^="prices"]');
                const quantityInput = item.querySelector('[name^="quantities"]');
                
                if (productInput && productInput.value && priceInput && priceInput.value) {
                    const price = parseFloat(priceInput.value) || 0;
                    const quantity = parseInt(quantityInput.value) || 1;
                    const total = price * quantity;
                    grossTotal += total;
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${productInput.value}</td>
                        <td>${price.toFixed(2)}</td>
                        <td>${quantity}</td>
                        <td>0.00</td>
                        <td>${total.toFixed(2)}</td>
                    `;
                    productsBody.appendChild(row);
                }
            });
            
            // Calculate discount
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            let discount = 0;
            
            if (discountType === 'percentage') {
                const discountPercent = parseFloat(document.getElementById('discountPercentageInput').value) || 0;
                discount = subtotal * (discountPercent / 100);
            } else {
                discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            }
            
            // Update table footer
            document.getElementById('previewGrossTotal').textContent = grossTotal.toFixed(2);
            document.getElementById('previewTotalDiscount').textContent = discount.toFixed(2);
            
            const netTotal = grossTotal - discount;
            document.getElementById('previewNetTotal').textContent = netTotal.toFixed(2);
            
            // Update summary
            document.getElementById('previewSummaryGross').textContent = grossTotal.toFixed(2);
            document.getElementById('previewSummaryDiscount').textContent = discount.toFixed(2);
            
            // Check for GST - based on addGstToBill toggle
            const addGstToBill = document.getElementById('addGstToBill');
            const gstRow = document.getElementById('previewGstRow');
            let grandTotal = netTotal;
            
            if (addGstToBill.checked) {
                const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
                const gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
                const gstAmount = netTotal * (gstPercentage / 100);
                document.getElementById('previewGstLabel').textContent = `GST (${gstPercentage}%)`;
                document.getElementById('previewGst').textContent = gstAmount.toFixed(2);
                gstRow.style.display = 'flex';
                grandTotal = netTotal + gstAmount;
            } else {
                gstRow.style.display = 'none';
            }
            
            document.getElementById('previewGrandTotal').textContent = grandTotal.toFixed(2);
            document.getElementById('previewNetAmount').textContent = netTotal.toFixed(2);
            
            // GST Number is always displayed (mandatory)
            document.getElementById('previewGstNumber').style.display = 'block';
            
            // Show modal
            document.getElementById('billPreviewModal').style.display = 'block';
        }
        
        function closeBillPreview() {
            document.getElementById('billPreviewModal').style.display = 'none';
        }
        
