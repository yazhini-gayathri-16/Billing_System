    <style>
        /* Autocomplete dropdown styles */
        .autocomplete-wrapper {
            position: relative;
            width: 100%;
        }
        .autocomplete-wrapper input {
            width: 100%;
        }
        .autocomplete-dropdown {
            display: none;
            position: absolute;
