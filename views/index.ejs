                        <td>${price.toFixed(2)}</td>
                        <td>1</td>
                        <td>0.00</td>
                        <td>${price.toFixed(2)}</td>
                    `;
                    servicesBody.appendChild(row);
                }
            });
            
            // Calculate discount
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            let discount = 0;
            
            if (discountType === 'percentage') {
                const discountPercent = parseFloat(document.getElementById('discountPercentageInput').value) || 0;
                discount = subtotal * (discountPercent / 100);
            } else {
                discount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            }
            
            // Add membership offers
            if (document.getElementById('hasMembership').checked) {
                const birthdayOfferChecked = document.getElementById('birthdayOffer').checked;
                const anniversaryOfferChecked = document.getElementById('anniversaryOffer').checked;
                
                if (birthdayOfferChecked) {
                    discount += (subtotal - discount) * 0.2;
                }
                if (anniversaryOfferChecked) {
                    discount += (subtotal - discount) * 0.2;
                }
            }
            
            // Update table footer
            document.getElementById('previewGrossTotal').textContent = grossTotal.toFixed(2);
            document.getElementById('previewTotalDiscount').textContent = discount.toFixed(2);
            
            let netTotal = grossTotal - discount;
            document.getElementById('previewNetTotal').textContent = netTotal.toFixed(2);
            
            // Update summary
            document.getElementById('previewSummaryGross').textContent = grossTotal.toFixed(2);
            document.getElementById('previewSummaryDiscount').textContent = discount.toFixed(2);
            
            // Check for GST
            const cardPayment = document.getElementById('paymentCard');
            const gstRow = document.getElementById('previewGstRow');
            let grandTotal = netTotal;
            
            if (cardPayment.checked) {
                const gstAmount = netTotal * 0.18;
                document.getElementById('previewGst').textContent = gstAmount.toFixed(2);
                gstRow.style.display = 'flex';
                grandTotal = netTotal + gstAmount;
            } else {
                gstRow.style.display = 'none';
            }
            
            document.getElementById('previewGrandTotal').textContent = grandTotal.toFixed(2);
            document.getElementById('previewPaymentMethod').textContent = document.querySelector('input[name="paymentMethod"]:checked').value;
            
            // Show modal
            document.getElementById('billPreviewModal').style.display = 'block';
        }
        
