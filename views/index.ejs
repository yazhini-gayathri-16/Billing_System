        function calculateGrandTotal() {
            const addGstToBill = document.getElementById('addGstToBill');
            const gstMessage = document.getElementById('gstMessage');
            const subtotal = parseFloat(document.getElementById('subtotal').value) || 0;
            let totalDiscount = 0;
            let gstfinal = 0;
            
            // Calculate regular discount
            const discountType = document.querySelector('input[name="discountType"]:checked').value;
            if (discountType === 'percentage') {
                const discountPercent = parseFloat(document.getElementById('discountPercentageInput').value) || 0;
                totalDiscount = subtotal * (discountPercent / 100);
            } else {
                totalDiscount = parseFloat(document.getElementById('discountRupeesInput').value) || 0;
            }
            
            // Add membership offers if applicable
            if (document.getElementById('hasMembership').checked) {
                const birthdayOfferChecked = document.getElementById('birthdayOffer').checked;
                const anniversaryOfferChecked = document.getElementById('anniversaryOffer').checked;
                
                // Apply 20% discount for each offer
                if (birthdayOfferChecked) {
                    totalDiscount += (subtotal - totalDiscount) * 0.2;
                }
                if (anniversaryOfferChecked) {
                    totalDiscount += (subtotal - totalDiscount) * 0.2;
                }
            }
            
            const grandTotal = Math.max(subtotal - totalDiscount, 0);
            
            // Apply GST if toggle is ON
            if (addGstToBill.checked) {
                const gstPercentageRadio = document.querySelector('input[name="gstPercentage"]:checked');
                const gstPercentage = gstPercentageRadio ? parseFloat(gstPercentageRadio.value) : 18;
                const gstRate = gstPercentage / 100;
                const gstAmount = parseFloat(grandTotal.toFixed(2)) * gstRate;
                gstfinal = (parseFloat(grandTotal.toFixed(2)) + gstAmount).toFixed(2);
                gstMessage.textContent = `GST (${gstPercentage}%): ₹${gstAmount.toFixed(2)}`;
                gstMessage.style.color = '#4CAF50';
                gstMessage.style.padding = '0px';
                gstMessage.style.fontSize = '13px';
                gstMessage.style.margin = '0px';
                gstMessage.style.fontWeight = '500';
            } else {
                gstMessage.textContent = '';
                gstfinal = grandTotal.toFixed(2);
            }

            document.getElementById('grandTotal').value = gstfinal;
        }

