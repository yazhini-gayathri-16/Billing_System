            display: inline-block;
            width: 50px;
            height: 26px;
        }
        .gst-toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .gst-toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 26px;
        }
        .gst-toggle-slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }
        .gst-toggle-switch input:checked + .gst-toggle-slider {
            background-color: #4CAF50;
        }
        .gst-toggle-switch input:checked + .gst-toggle-slider:before {
            transform: translateX(24px);
        }
