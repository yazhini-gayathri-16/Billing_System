<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Service Menu</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.css"> -->
    <link rel="stylesheet" href="/styles/menuview.css">
</head>
<body>
    <% if (userRole === 'admin') { %>
        <%- include('partials/navbar') %>
    <% } else { %>
        <%- include('partials/staffnavbar') %>
    <% } %>
    <div class="container">
        <h1>Service Menu</h1>
    
        <div class="menu-container">
            <% services.forEach(function(service) { %>
                <!-- Card for Regular Price -->
                <div class="menu-card">
                    <p><strong>Service:</strong> <%= service.serviceName %></p>
                    <p><strong>Price Type:</strong> Regular Price</p>
                    <p><strong>Price:</strong> ₹<%= service.regularPrice.toFixed(2) %></p>
                </div>

                <!-- Card for Membership Price -->
                <div class="menu-card">
                    <p><strong>Service:</strong> <%= service.serviceName %></p>
                    <p><strong>Price Type:</strong> Membership Price</p>
                    <p><strong>Price:</strong> ₹<%= service.membershipPrice.toFixed(2) %></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
