<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Management</title>
    <link rel="icon" href="/images/logo 3-square.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gowun+Batang&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/navbarstyle.css">
    <link rel="stylesheet" href="/styles/headerstyle.css">
    <style>
        body {
            font-family: 'Gowun Batang', serif;
            background-color: #e8ede8;
            margin: 0;
            padding: 0;
        }

        .page-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 15px 20px;
        }

        /* Page Header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .header-left h1 {
            font-size: 28px;
            font-weight: 700;
            color: #1a202c;
            margin: 0 0 6px 0;
        }

        .header-left p {
            font-size: 14px;
            color: #718096;
            margin: 0;
        }

        .btn-new-staff {
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-new-staff:hover {
            background: #45a049;
        }

        /* Add Staff Section */
        .add-staff-section {
            display: none;
            background: white;
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .add-staff-section.active {
            display: block;
        }

        .section-title {
            text-align: center;
            margin-bottom: 10px;
        }

        .section-title h1 {
            font-size: 24px;
            font-weight: 600;
            color: #1a202c;
            margin: 0 0 6px 0;
        }

        .section-subtitle {
            text-align: center;
            font-size: 13px;
            color: #718096;
            margin-bottom: 30px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            min-width: 0;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-group label {
            display: block;
            font-size: 13px;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 8px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px 14px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 14px;
            font-family: 'Gowun Batang', serif;
            transition: all 0.2s;
            box-sizing: border-box;
            background: white;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

        /* File Upload Area */
        .upload-area {
            grid-column: 1 / -1;
            border: 2px dashed #cbd5e0;
            border-radius: 8px;
            padding: 40px 20px;
            text-align: center;
            background: #f7fafc;
            cursor: pointer;
            transition: all 0.2s;
        }

        .upload-area:hover {
            border-color: #4CAF50;
            background: #f0fdf4;
        }

        .upload-area.dragover {
            border-color: #4CAF50;
            background: #f0fdf4;
        }

        .upload-icon {
            width: 48px;
            height: 48px;
            margin: 0 auto 12px;
            background: #e2e8f0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: #718096;
        }

        .upload-text {
            font-size: 14px;
            color: #4a5568;
            margin-bottom: 4px;
        }

        .upload-text span {
            color: #4CAF50;
            cursor: pointer;
        }

        .upload-hint {
            font-size: 12px;
            color: #a0aec0;
        }

        .upload-area input[type="file"] {
            display: none;
        }

        .file-name {
            margin-top: 12px;
            font-size: 13px;
            color: #4CAF50;
            font-weight: 500;
        }

        .btn-submit {
            grid-column: 1 / -1;
            padding: 12px 32px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-left: auto;
        }

        .btn-submit:hover {
            background: #45a049;
        }

        /* Staff Directory Section */
        .staff-directory-section {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .directory-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }

        .directory-header-left h2 {
            font-size: 20px;
            font-weight: 600;
            color: #1a202c;
            margin: 0 0 4px 0;
        }

        .directory-header-left p {
            font-size: 13px;
            color: #718096;
            margin: 0;
        }

        .directory-actions {
            display: flex;
            gap: 12px;
            align-items: center;
            flex-shrink: 0;
        }

        .btn-add-credentials {
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-add-credentials:hover {
            background: #45a049;
        }

        .btn-change-password {
            padding: 10px 20px;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-change-password:hover {
            background: #2563eb;
        }

        /* Credentials Modal */
        .credentials-modal .modal-content {
            min-width: 600px;
            max-width: 800px;
        }

        .credentials-modal h2 {
            font-size: 20px;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 20px;
        }

        .credentials-table {
            width: 100%;
            border-collapse: collapse;
        }

        .credentials-table thead {
            background: #f7fafc;
        }

        .credentials-table th {
            padding: 12px 16px;
            text-align: left;
            font-size: 11px;
            font-weight: 600;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #e2e8f0;
        }

        .credentials-table tbody tr {
            border-bottom: 1px solid #f7fafc;
            transition: background-color 0.2s;
        }

        .credentials-table tbody tr:hover {
            background-color: #f7fafc;
        }

        .credentials-table td {
            padding: 14px 16px;
            font-size: 14px;
            color: #1a202c;
        }

        .credentials-table .editable-input {
            width: 100%;
            padding: 8px 10px;
            border: 1px solid #e2e8f0;
            border-radius: 4px;
            font-size: 14px;
            font-family: 'Gowun Batang', serif;
        }

        .credentials-table .editable-input:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
        }

        .credential-actions {
            display: flex;
            gap: 8px;
        }

        .credential-action-btn {
            width: 32px;
            height: 32px;
            border: none;
            background: transparent;
            border-radius: 6px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .credential-action-btn.edit {
            color: #3b82f6;
        }

        .credential-action-btn.edit:hover {
            background: #eff6ff;
        }

        .credential-action-btn.save {
            color: #4CAF50;
        }

        .credential-action-btn.save:hover {
            background: #f0fdf4;
        }

        .credential-action-btn.cancel {
            color: #6b7280;
        }

        .credential-action-btn.cancel:hover {
            background: #f3f4f6;
        }

        .credential-action-btn.delete {
            color: #DC3545;
        }

        .credential-action-btn.delete:hover {
            background: #fef2f2;
        }

        .role-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
        }

        .role-badge.admin {
            background: #e9d5ff;
            color: #6b21a8;
        }

        .role-badge.staff {
            background: #dbeafe;
            color: #1e40af;
        }

        .password-field {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .password-toggle {
            cursor: pointer;
            color: #718096;
            padding: 4px;
        }

        .password-toggle:hover {
            color: #4a5568;
        }

        .no-credentials {
            text-align: center;
            padding: 40px;
            color: #718096;
        }

        /* Delete Credential Confirmation Modal */
        .delete-credential-modal .modal-content {
            text-align: center;
            min-width: 400px;
        }

        .delete-credential-modal .modal-icon {
            width: 56px;
            height: 56px;
            background: #fee2e2;
            color: #DC3545;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 24px;
        }

        .delete-credential-modal h3 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #1a202c;
        }

        .delete-credential-modal p {
            font-size: 14px;
            color: #718096;
            margin-bottom: 24px;
        }

        .delete-credential-modal .modal-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .delete-credential-modal button {
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
        }

        .delete-credential-modal .btn-confirm-delete {
            background: #DC3545;
            color: white;
        }

        .delete-credential-modal .btn-confirm-delete:hover {
            background: #c82333;
        }

        .delete-credential-modal .btn-cancel-delete {
            background: #f3f4f6;
            color: #4b5563;
        }

        .delete-credential-modal .btn-cancel-delete:hover {
            background: #e5e7eb;
        }

        .search-box {
            position: relative;
            width: 250px;
            flex-shrink: 0;
        }

        .search-box input {
            width: 100%;
            padding: 8px 12px 8px 36px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 13px;
            box-sizing: border-box;
            background: white;
        }

        .search-box input:focus {
            outline: none;
            border-color: #cbd5e0;
        }

        .search-box i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            font-size: 14px;
        }

        /* Staff Table */
        .staff-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .staff-table thead {
            background: #f7fafc;
        }

        .staff-table th {
            padding: 12px 16px;
            text-align: left;
            font-size: 11px;
            font-weight: 600;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid #e2e8f0;
        }

        .staff-table tbody tr {
            border-bottom: 1px solid #f7fafc;
            transition: background-color 0.2s;
        }

        .staff-table tbody tr:hover {
            background-color: #f7fafc;
        }

        .staff-table td {
            padding: 14px 16px;
            font-size: 14px;
            color: #1a202c;
        }

        .sl-no {
            width: 60px;
            color: #718096;
            font-weight: 500;
        }

        .staff-name-cell {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 14px;
            color: white;
            flex-shrink: 0;
        }

        .staff-name {
            font-weight: 500;
            color: #1a202c;
        }

        .job-title-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
        }

        .badge-green {
            background: #d1fae5;
            color: #065f46;
        }

        .badge-blue {
            background: #dbeafe;
            color: #1e40af;
        }

        .badge-purple {
            background: #e9d5ff;
            color: #6b21a8;
        }

        .badge-orange {
            background: #fed7aa;
            color: #9a3412;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .action-btn {
            width: 36px;
            height: 36px;
            border: none;
            background: transparent;
            border-radius: 6px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .action-btn.preview {
            color: #3b82f6;
        }

        .action-btn.preview:hover {
            background: #eff6ff;
        }

        .action-btn.delete {
            color: #DC3545;
        }

        .action-btn.delete:hover {
            background: #fef2f2;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
            padding-top: 16px;
            border-top: 1px solid #e2e8f0;
        }

        .pagination-info {
            font-size: 13px;
            color: #718096;
        }

        .pagination-controls {
            display: flex;
            gap: 8px;
        }

        .pagination-btn {
            width: 36px;
            height: 36px;
            border: 1px solid #e2e8f0;
            background: white;
            border-radius: 6px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
            color: #4a5568;
        }

        .pagination-btn:hover:not(:disabled) {
            background: #f7fafc;
        }

        .pagination-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        .pagination-btn.active {
            background: #4CAF50;
            color: white;
            border-color: #4CAF50;
        }

        /* Modals */
        .modal-overlay {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
            min-width: 400px;
            max-width: 600px;
            max-height: 80vh;
            overflow-y: auto;
            position: relative;
        }

        .modal-close {
            position: absolute;
            top: 16px;
            right: 16px;
            font-size: 24px;
            color: #a0aec0;
            cursor: pointer;
            line-height: 1;
        }

        .modal-close:hover {
            color: #4a5568;
        }

        .preview-content {
            margin-top: 24px;
        }

        .preview-photo {
            text-align: center;
            margin-bottom: 24px;
        }

        .preview-photo img {
            max-width: 200px;
            max-height: 200px;
            border-radius: 8px;
            object-fit: cover;
        }

        .no-photo {
            width: 200px;
            height: 200px;
            background: #f7fafc;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: #a0aec0;
        }

        .detail-row {
            display: grid;
            grid-template-columns: 150px 1fr;
            gap: 16px;
            padding: 12px 0;
            border-bottom: 1px solid #f7fafc;
        }

        .detail-row label {
            font-size: 13px;
            font-weight: 600;
            color: #718096;
        }

        .detail-value {
            font-size: 14px;
            color: #1a202c;
        }

        .edit-input {
            width: 100%;
            padding: 8px 10px;
            border: 1px solid #e2e8f0;
            border-radius: 4px;
            font-size: 14px;
        }

        .preview-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            margin-top: 24px;
        }

        .preview-actions button {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .edit-btn {
            background: #3b82f6;
            color: white;
        }

        .edit-btn:hover {
            background: #2563eb;
        }

        .save-btn {
            background: #4CAF50;
            color: white;
        }

        .save-btn:hover {
            background: #45a049;
        }

        .cancel-btn {
            background: #6c757d;
            color: white;
        }

        .cancel-btn:hover {
            background: #5a6268;
        }

        .close-modal-btn {
            background: #f3f4f6;
            color: #4b5563;
        }

        .close-modal-btn:hover {
            background: #e5e7eb;
        }

        /* Delete Modal */
        .delete-modal .modal-content {
            text-align: center;
            min-width: 400px;
        }

        .modal-icon {
            width: 56px;
            height: 56px;
            background: #fee2e2;
            color: #DC3545;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 24px;
        }

        .delete-modal h3 {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #1a202c;
        }

        .delete-modal p {
            font-size: 14px;
            color: #718096;
            margin-bottom: 24px;
        }

        .delete-modal .modal-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .delete-modal button {
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
        }

        .delete-modal #confirmDeleteBtn {
            background: #DC3545;
            color: white;
        }

        .delete-modal #confirmDeleteBtn:hover {
            background: #c82333;
        }

        .delete-modal #cancelDeleteBtn {
            background: #f3f4f6;
            color: #4b5563;
        }

        .delete-modal #cancelDeleteBtn:hover {
            background: #e5e7eb;
        }

        /* Responsive */
        @media (max-width: 968px) {
            .page-header {
                flex-direction: column;
                gap: 16px;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .directory-header {
                flex-direction: column;
                gap: 16px;
                align-items: flex-start;
            }

            .directory-actions {
                width: 100%;
                flex-direction: column;
            }

            .search-box {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="page-container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-left">
                <h1>Staff Management</h1>
                <p>Manage your team members and their roles efficiently.</p>
            </div>
            <button class="btn-new-staff" onclick="toggleStaffForm()">
                <i class="fas fa-plus"></i>
                Add New Staff
            </button>
        </div>

        <!-- Add New Staff Section -->
        <div id="staffForm" class="add-staff-section">
            <div class="section-title">
                <h1>Add New Staff</h1>
            </div>
            <p class="section-subtitle">Enter the details below to register a new staff member into the system.</p>
            
            <form action="/add-staff" method="post" id="staffForm" enctype="multipart/form-data">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" autocomplete="off" id="name" name="name" placeholder="e.g. Chris Evans" required>
                    </div>
                    <div class="form-group">
                        <label for="birthdate">Birthdate</label>
                        <input type="date" autocomplete="off" id="birthdate" name="birthdate" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" autocomplete="off" placeholder="staff@example.com" required>
                    </div>
                    <div class="form-group">
                        <label for="contactNumber">Contact Number</label>
                        <input type="tel" id="contactNumber" autocomplete="off" name="contactNumber" placeholder="+1 (555) 000-0000" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select name="gender" id="gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="jobTitle">Job Title</label>
                        <input type="text" id="jobTitle" autocomplete="off" name="jobTitle" placeholder="e.g. Hair Specialist" required>
                    </div>
                    <div class="form-group">
                        <label for="employmentStartDate">Employment Start Date</label>
                        <input type="date" id="employmentStartDate" name="employmentStartDate" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <label for="aadhaarId">Aadhaar ID / National ID</label>
                        <input type="text" id="aadhaarId" name="aadhaarId" autocomplete="off" placeholder="XXXX-XXXX-XXXX" maxlength="12" required>
                    </div>
                    <div class="form-group full-width">
                        <label for="address">Permanent Address</label>
                        <textarea id="address" name="address" placeholder="Street address, City, State, Zip" required></textarea>
                    </div>
                    
                    <!-- File Upload Area -->
                    <div class="upload-area full-width" id="uploadArea">
                        <input type="file" id="aadhaarPhoto" name="aadhaarPhoto" accept="image/png, image/jpeg, image/jpg" required>
                        <div class="upload-icon">
                            <i class="fas fa-cloud-upload-alt"></i>
                        </div>
                        <div class="upload-text">
                            <span onclick="document.getElementById('aadhaarPhoto').click()">Upload a file</span> or drag and drop
                        </div>
                        <div class="upload-hint">PNG, JPG, GIF up to 10MB</div>
                        <div class="file-name" id="fileName"></div>
                    </div>

                    <button type="submit" class="btn-submit">
                        <i class="fas fa-plus"></i>
                        Add Staff Member
                    </button>
                </div>
            </form>
        </div>

        <!-- Staff Directory Section -->
        <div class="staff-directory-section">
            <div class="directory-header">
                <div class="directory-header-left">
                    <h2>Staff Directory</h2>
                    <p>Manage your current team members and their roles.</p>
                </div>
                <div class="directory-actions">
                    <% if (userRole === 'admin') { %>
                        <a href="/signup" class="btn-add-credentials">
                            <i class="fas fa-key"></i>
                            Add Credentials
                        </a>
                        <button class="btn-change-password" onclick="showCredentialsModal()">
                            <i class="fas fa-lock"></i>
                            Change Password
                        </button>
                    <% } %>
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="searchStaff" placeholder="Search staff..." onkeyup="searchStaff()">
                    </div>
                </div>
            </div>

            <table class="staff-table">
                <thead>
                    <tr>
                        <th>SL NO</th>
                        <th>STAFF NAME</th>
                        <th>CONTACT NUMBER</th>
                        <th>JOB TITLE</th>
                        <th>START DATE</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody id="staffTableBody">
                    <% 
                    const colors = ['#3b82f6', '#ec4899', '#8b5cf6', '#f59e0b', '#10b981', '#f97316'];
                    const badgeColors = ['badge-green', 'badge-blue', 'badge-purple', 'badge-orange'];
                    
                    staffMembers.forEach(function(staff, index) { 
                        const initials = staff.name.split(' ').map(n => n[0]).join('').substring(0, 2);
                        const avatarColor = colors[index % colors.length];
                        const badgeColor = badgeColors[index % badgeColors.length];
                        const sd = new Date(staff.employmentStartDate);
                        const startDate = String(sd.getDate()).padStart(2, '0') + '-' + String(sd.getMonth() + 1).padStart(2, '0') + '-' + sd.getFullYear();
                    %>
                    <tr id="staff-<%= staff._id %>" data-staff-name="<%= staff.name.toLowerCase() %>">
                        <td class="sl-no"><%= index + 1 %></td>
                        <td>
                            <div class="staff-name-cell">
                                <div class="avatar" style="background-color: <%= avatarColor %>"><%= initials %></div>
                                <span class="staff-name"><%= staff.name %></span>
                            </div>
                        </td>
                        <td><%= staff.contactNumber %></td>
                        <td><span class="job-title-badge <%= badgeColor %>"><%= staff.jobTitle %></span></td>
                        <td><%= startDate %></td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn preview" onclick="showPreview('<%= staff._id %>')" title="Preview">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="action-btn delete" onclick="confirmDelete('<%= staff._id %>')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

            <div class="pagination">
                <div class="pagination-info">
                    Showing 1 to <%= Math.min(4, staffMembers.length) %> of <%= staffMembers.length %> results
                </div>
                <div class="pagination-controls">
                    <button class="pagination-btn" disabled><i class="fas fa-chevron-left"></i></button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn" disabled><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Staff Preview Modal -->
    <div id="staffPreviewModal" class="modal-overlay">
        <div class="modal-content preview-modal">
            <span class="modal-close" onclick="closePreview()">&times;</span>
            <h2>Staff Details</h2>
            <div id="previewContent" class="preview-content">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="preview-actions">
                <button type="button" id="editPreviewBtn" class="edit-btn" onclick="enablePreviewEditing()">Edit</button>
                <button type="button" id="savePreviewBtn" class="save-btn" style="display:none;" onclick="savePreviewChanges()">Save</button>
                <button type="button" id="cancelEditBtn" class="cancel-btn" style="display:none;" onclick="cancelPreviewEditing()">Cancel</button>
                <button type="button" class="close-modal-btn" onclick="closePreview()">Close</button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmModal" class="modal-overlay delete-modal">
        <div class="modal-content">
            <div class="modal-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3>Delete Staff Member?</h3>
            <p>Are you sure you want to delete this staff member?<br>This action cannot be undone.</p>
            <form id="deleteForm" action="/delete-staff" method="post">
                <input type="hidden" name="id" id="deleteStaffId">
                <div class="modal-actions">
                    <button type="button" id="cancelDeleteBtn">Cancel</button>
                    <button type="submit" id="confirmDeleteBtn">Delete</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Credentials Management Modal -->
    <div id="credentialsModal" class="modal-overlay credentials-modal">
        <div class="modal-content">
            <span class="modal-close" onclick="closeCredentialsModal()">&times;</span>
            <h2><i class="fas fa-users-cog"></i> Manage Credentials</h2>
            <div id="credentialsTableContainer">
                <table class="credentials-table">
                    <thead>
                        <tr>
                            <th>USERNAME (EMAIL)</th>
                            <th>PASSWORD</th>
                            <th>ROLE</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody id="credentialsTableBody">
                        <!-- Credentials will be populated here by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Delete Credential Confirmation Modal -->
    <div id="deleteCredentialModal" class="modal-overlay delete-credential-modal">
        <div class="modal-content">
            <div class="modal-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3>Delete User Credentials?</h3>
            <p id="deleteCredentialMessage">Are you sure you want to delete this user?<br>This action cannot be undone.</p>
            <input type="hidden" id="deleteCredentialId">
            <div class="modal-actions">
                <button type="button" class="btn-cancel-delete" onclick="closeDeleteCredentialModal()">Cancel</button>
                <button type="button" class="btn-confirm-delete" onclick="confirmDeleteCredential()">Delete</button>
            </div>
        </div>
    </div>

    <script>
        // Toggle staff form
        function toggleStaffForm() {
            const form = document.getElementById('staffForm');
            form.classList.toggle('active');
            if (form.classList.contains('active')) {
                form.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // Store all staff data for preview
        const staffData = <%- JSON.stringify(staffMembers) %>;
        let currentStaffId = null;
        let originalPreviewData = null;

        // File upload handling
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('aadhaarPhoto');
        const fileName = document.getElementById('fileName');

        fileInput.addEventListener('change', function() {
            if (this.files && this.files[0]) {
                fileName.textContent = this.files[0].name;
            }
        });

        uploadArea.addEventListener('click', function(e) {
            if (e.target.tagName !== 'SPAN') {
                fileInput.click();
            }
        });

        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', function() {
            this.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('dragover');
            
            if (e.dataTransfer.files && e.dataTransfer.files[0]) {
                fileInput.files = e.dataTransfer.files;
                fileName.textContent = e.dataTransfer.files[0].name;
            }
        });

        // Search staff
        function searchStaff() {
            const input = document.getElementById('searchStaff');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('staffTableBody');
            const rows = table.getElementsByTagName('tr');

            for (let i = 0; i < rows.length; i++) {
                const staffName = rows[i].getAttribute('data-staff-name');
                if (staffName && staffName.indexOf(filter) > -1) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }

        // Show staff preview modal
        function showPreview(staffId) {
            currentStaffId = staffId;
            const staff = staffData.find(s => s._id === staffId);
            if (!staff) return;

            originalPreviewData = { ...staff };

            const bd = new Date(staff.birthdate);
            const birthdate = String(bd.getDate()).padStart(2, '0') + '-' + String(bd.getMonth() + 1).padStart(2, '0') + '-' + bd.getFullYear();
            const esd = new Date(staff.employmentStartDate);
            const employmentStartDate = String(esd.getDate()).padStart(2, '0') + '-' + String(esd.getMonth() + 1).padStart(2, '0') + '-' + esd.getFullYear();

            const previewHtml = `
                <div class="preview-photo">
                    ${staff.aadhaarPhoto ? `<img src="${staff.aadhaarPhoto}" alt="Staff Photo">` : '<div class="no-photo">No Photo</div>'}
                </div>
                <div class="preview-details">
                    <div class="detail-row">
                        <label>Name:</label>
                        <span class="detail-value" data-field="name">${staff.name}</span>
                    </div>
                    <div class="detail-row">
                        <label>Email:</label>
                        <span class="detail-value" data-field="email">${staff.email}</span>
                    </div>
                    <div class="detail-row">
                        <label>Birthdate:</label>
                        <span class="detail-value" data-field="birthdate" data-raw="${staff.birthdate ? new Date(staff.birthdate).toISOString().slice(0,10) : ''}">${birthdate}</span>
                    </div>
                    <div class="detail-row">
                        <label>Contact Number:</label>
                        <span class="detail-value" data-field="contactNumber">${staff.contactNumber}</span>
                    </div>
                    <div class="detail-row">
                        <label>Gender:</label>
                        <span class="detail-value" data-field="gender">${staff.gender}</span>
                    </div>
                    <div class="detail-row">
                        <label>Address:</label>
                        <span class="detail-value" data-field="address">${staff.address}</span>
                    </div>
                    <div class="detail-row">
                        <label>Job Title:</label>
                        <span class="detail-value" data-field="jobTitle">${staff.jobTitle}</span>
                    </div>
                    <div class="detail-row non-editable">
                        <label>Employment Start:</label>
                        <span class="detail-value" data-field="employmentStartDate">${employmentStartDate}</span>
                    </div>
                    <div class="detail-row non-editable">
                        <label>Aadhaar ID:</label>
                        <span class="detail-value" data-field="aadhaarId">${staff.aadhaarId}</span>
                    </div>
                </div>
            `;

            document.getElementById('previewContent').innerHTML = previewHtml;
            document.getElementById('staffPreviewModal').style.display = 'flex';
            
            document.getElementById('editPreviewBtn').style.display = 'inline-block';
            document.getElementById('savePreviewBtn').style.display = 'none';
            document.getElementById('cancelEditBtn').style.display = 'none';
        }

        function closePreview() {
            document.getElementById('staffPreviewModal').style.display = 'none';
            currentStaffId = null;
            originalPreviewData = null;
        }

        function enablePreviewEditing() {
            const editableFields = document.querySelectorAll('.detail-value:not(.non-editable *)');
            
            editableFields.forEach(span => {
                const field = span.dataset.field;
                const value = span.dataset.raw || span.textContent;
                
                if (field === 'employmentStartDate' || field === 'aadhaarId') return;
                
                let inputHtml = '';
                if (field === 'birthdate') {
                    inputHtml = `<input type="date" class="edit-input" data-field="${field}" value="${value}">`;
                } else if (field === 'gender') {
                    inputHtml = `
                        <select class="edit-input" data-field="${field}">
                            <option value="Male" ${value === 'Male' ? 'selected' : ''}>Male</option>
                            <option value="Female" ${value === 'Female' ? 'selected' : ''}>Female</option>
                            <option value="Other" ${value === 'Other' ? 'selected' : ''}>Other</option>
                        </select>
                    `;
                } else if (field === 'address') {
                    inputHtml = `<textarea class="edit-input" data-field="${field}">${value}</textarea>`;
                } else {
                    inputHtml = `<input type="text" class="edit-input" data-field="${field}" value="${value}">`;
                }
                
                span.innerHTML = inputHtml;
            });

            document.getElementById('editPreviewBtn').style.display = 'none';
            document.getElementById('savePreviewBtn').style.display = 'inline-block';
            document.getElementById('cancelEditBtn').style.display = 'inline-block';
        }

        function cancelPreviewEditing() {
            if (originalPreviewData) {
                showPreview(currentStaffId);
            }
        }

        function savePreviewChanges() {
            const formData = { id: currentStaffId };
            
            document.querySelectorAll('.edit-input').forEach(input => {
                formData[input.dataset.field] = input.value;
            });

            fetch('/update-staff', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Staff details updated successfully!');
                    location.reload();
                } else {
                    alert('Failed to update staff details');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating staff details');
            });
        }

        // Delete confirmation
        function confirmDelete(staffId) {
            document.getElementById('deleteStaffId').value = staffId;
            document.getElementById('deleteConfirmModal').style.display = 'flex';
        }

        document.getElementById('cancelDeleteBtn').onclick = function() {
            document.getElementById('deleteConfirmModal').style.display = 'none';
        };

        // Close modal when clicking outside
        document.getElementById('staffPreviewModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closePreview();
            }
        });

        document.getElementById('deleteConfirmModal').addEventListener('click', function(e) {
            if (e.target === this) {
                this.style.display = 'none';
            }
        });

        // ========== Credentials Management Functions ==========
        
        let credentialsData = [];
        let editingCredentialId = null;

        // Show credentials modal and load data
        function showCredentialsModal() {
            document.getElementById('credentialsModal').style.display = 'flex';
            loadCredentials();
        }

        // Close credentials modal
        function closeCredentialsModal() {
            document.getElementById('credentialsModal').style.display = 'none';
            editingCredentialId = null;
        }

        // Load all credentials from API
        async function loadCredentials() {
            try {
                const response = await fetch('/api/credentials');
                const data = await response.json();
                
                if (data.success) {
                    credentialsData = data.users;
                    renderCredentialsTable();
                } else {
                    alert('Failed to load credentials');
                }
            } catch (error) {
                console.error('Error loading credentials:', error);
                alert('Error loading credentials');
            }
        }

        // Render the credentials table
        function renderCredentialsTable() {
            const tbody = document.getElementById('credentialsTableBody');
            
            if (credentialsData.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="no-credentials">No credentials found</td></tr>';
                return;
            }

            tbody.innerHTML = credentialsData.map(user => {
                const isEditing = editingCredentialId === user._id;
                
                return `
                    <tr id="credential-row-${user._id}">
                        <td>
                            ${isEditing 
                                ? `<input type="text" class="editable-input" id="edit-mail-${user._id}" value="${user.mail}">`
                                : user.mail
                            }
                        </td>
                        <td>
                            <div class="password-field">
                                ${isEditing 
                                    ? `<input type="text" class="editable-input" id="edit-password-${user._id}" value="${user.password}">`
                                    : `<span class="password-text" id="password-${user._id}">••••••••</span>
                                       <span class="password-toggle" onclick="togglePasswordVisibility('${user._id}', '${user.password}')">
                                           <i class="fas fa-eye" id="eye-icon-${user._id}"></i>
                                       </span>`
                                }
                            </div>
                        </td>
                        <td>
                            <span class="role-badge ${user.role}">${user.role}</span>
                        </td>
                        <td>
                            <div class="credential-actions">
                                ${isEditing 
                                    ? `<button class="credential-action-btn save" onclick="saveCredential('${user._id}')" title="Save">
                                           <i class="fas fa-check"></i>
                                       </button>
                                       <button class="credential-action-btn cancel" onclick="cancelEditCredential()" title="Cancel">
                                           <i class="fas fa-times"></i>
                                       </button>`
                                    : `<button class="credential-action-btn edit" onclick="editCredential('${user._id}')" title="Edit">
                                           <i class="fas fa-pen"></i>
                                       </button>
                                       <button class="credential-action-btn delete" onclick="showDeleteCredentialModal('${user._id}', '${user.mail}')" title="Delete">
                                           <i class="fas fa-trash"></i>
                                       </button>`
                                }
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        // Toggle password visibility
        function togglePasswordVisibility(userId, password) {
            const passwordText = document.getElementById(`password-${userId}`);
            const eyeIcon = document.getElementById(`eye-icon-${userId}`);
            
            if (passwordText.textContent === '••••••••') {
                passwordText.textContent = password;
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordText.textContent = '••••••••';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        // Edit credential - make row editable
        function editCredential(userId) {
            editingCredentialId = userId;
            renderCredentialsTable();
        }

        // Cancel editing
        function cancelEditCredential() {
            editingCredentialId = null;
            renderCredentialsTable();
        }

        // Save credential changes
        async function saveCredential(userId) {
            const mailInput = document.getElementById(`edit-mail-${userId}`);
            const passwordInput = document.getElementById(`edit-password-${userId}`);
            
            const mail = mailInput.value.trim();
            const password = passwordInput.value.trim();
            
            if (!mail || !password) {
                alert('Username and password cannot be empty');
                return;
            }

            try {
                const response = await fetch(`/api/credentials/${userId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mail, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Credentials updated successfully!');
                    editingCredentialId = null;
                    loadCredentials();
                } else {
                    alert(data.message || 'Failed to update credentials');
                }
            } catch (error) {
                console.error('Error updating credentials:', error);
                alert('Error updating credentials');
            }
        }

        // Show delete credential confirmation modal
        function showDeleteCredentialModal(userId, userMail) {
            document.getElementById('deleteCredentialId').value = userId;
            document.getElementById('deleteCredentialMessage').innerHTML = 
                `Are you sure you want to delete <strong>${userMail}</strong>?<br>This action cannot be undone.`;
            document.getElementById('deleteCredentialModal').style.display = 'flex';
        }

        // Close delete credential modal
        function closeDeleteCredentialModal() {
            document.getElementById('deleteCredentialModal').style.display = 'none';
        }

        // Confirm and delete credential
        async function confirmDeleteCredential() {
            const userId = document.getElementById('deleteCredentialId').value;
            
            try {
                const response = await fetch(`/api/credentials/${userId}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('User deleted successfully!');
                    closeDeleteCredentialModal();
                    loadCredentials();
                } else {
                    alert(data.message || 'Failed to delete user');
                }
            } catch (error) {
                console.error('Error deleting credential:', error);
                alert('Error deleting credential');
            }
        }

        // Close modals when clicking outside
        document.getElementById('credentialsModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCredentialsModal();
            }
        });

        document.getElementById('deleteCredentialModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteCredentialModal();
            }
        });
    </script>
    <%- include('partials/globalScripts') %>
</body>
</html>
